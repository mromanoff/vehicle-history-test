/* Typography
   ========================================================================== */
$base-font-color: $color-black !default;
$base-link-color: $color-black !default;
$base-heading-color: $base-font-color !default;
$base-subheading-color: $color-gray !default;

// Page
$base-background-color: $color-white;
$base-text-color: $color-black;

// Navigation
$color-navigation-background: $color-brand-primary1;
$color-navigation-background-active: $color-brand-primary2;
$color-navigation-links: $color-gray-lighter;
$color-navigation-links-hover: $color-white;
$color-navigation-links-active: $color-gray-faint;

//Footer
$color-footer-text: $color-brand-secondary2;
$color-footer-background: $color-brand-primary4;

// buttons
$color-primary-btn-background: $color-brand-primary1;

// Links
$color-links: $color-black;
