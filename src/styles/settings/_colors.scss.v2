// scss-lint:disable VendorPrefixes, ColorVariable

/**
 * settings/_colors.scss
 */

/* ==========================================================================
   Colors
   ========================================================================== */

/* Core
   ========================================================================== */

$color-black: #25211e !default;
$color-white: #ffffff !default;
$transparent: transparent !default;

/* Greys
   ========================================================================== */
$color-gray-darker: #25211e !default;
$color-gray-dark: #3f3833 !default;
$color-gray: #574d47 !default;
$color-gray-light: #6f635c !default;
$color-gray-lighter: #cbbdae !default;
$color-gray-faint: #f5f8fa; /* There color doesn't exist in style guide */

/* Brand colors
   ========================================================================== */
// based on https://color.adobe.com/Roles1-color-theme-1814741/

$color-brand-primary1: #382b22 !default;
$color-brand-primary2: #6b5241 !default;
$color-brand-primary3: #9caa88 !default;
$color-brand-primary4: #6d7c6b !default;
$color-brand-primary5: #4C5A4B !default;

$color-brand-secondary1: #b99e8b !default;
$color-brand-secondary2: #aebc93 !default;
$color-brand-secondary3: #647062 !default;
$color-brand-secondary4: #aebc93 !default;
$color-brand-secondary5: #ff652f !default;
$color-brand-secondary6: #f13c20 !default;
$color-brand-secondary7: #aa1208 !default;
$color-brand-secondary8: #61812f !default;
$color-brand-secondary9: #86c232 !default;
$color-brand-secondary10: #ffed26 !default;

$color-brand-success: $color-brand-secondary9 !default;
$color-brand-warning: $color-brand-secondary10 !default;
$color-brand-danger: $color-brand-secondary6 !default;
$color-brand-info: #5bc0de !default;

